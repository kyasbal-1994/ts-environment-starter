.outerContainer
    width 100%
    height 100px
    padding 20px 0px

.innerContainer
    width 80%
    max-width 500px
    height 10px
    margin 0 auto
    border-radius 5px
    background-color lightgray
    position relative

.grip
    width 18px
    height 18px
    border-radius 9px
    box-sizing border-box
    transform translateY(-4.5px)translateX(-9px)
    background-color #DE3831
    border 2px white solid
    position absolute
    &:hover
        width 26px
        height 26px
        border-radius 13px
        transform translateY(-6.5px)translateX(-13px)
        background-color #DE3831
        cursor pointer

.hold
    width 26px
    height 26px
    border-radius 13px
    transform translateY(-6.5px)translateX(-13px)
    background-color #DE3831
    cursor pointer

.percentageLabel
    text-align center