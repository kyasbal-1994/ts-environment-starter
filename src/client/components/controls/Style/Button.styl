.buttonOuter
    margin 0 auto
    width $bottom-height
    height $bottom-height
    border-radius ($bottom-height/2)
    display flex
    flex-direction column
    justify-content space-around
    text-align center
    color white
    &:hover
        cursor pointer
    &>p
        transform scale(0.7)

.prevButton
    background-color #51A9DE
.nextButton
    background-color #DE3831
.disabled
    background-color dimgray